<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DetailsActivity">

    <LinearLayout
        android:id="@+id/details_bg"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical"
        android:background="#0097A7"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/de_tx"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/peo_man"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            />

        <TextView
            android:id="@+id/de_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            />


    </LinearLayout>



        <!--上面是头部-->








    <LinearLayout
        android:id="@+id/details_bg_de"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"

        >

        <TextView
            android:id="@+id/de_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5556"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"

            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:gravity="end">

            <Button
                android:id="@+id/de_da_phone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/d_phone"
                android:foreground="?selectableItemBackground"

                />


            <Button
                android:id="@+id/de_da_message"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/d_message"
                android:foreground="?selectableItemBackground"

                />


        </RelativeLayout>

    </LinearLayout>










    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/de_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别：男"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            />


    </LinearLayout>




    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/de_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="在校学生"
            android:textSize="25sp"
            android:textStyle="bold" />


    </LinearLayout>




    <!--底部的菜单-->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >


        <Button
            android:id="@+id/de_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="返回">


        </Button>



        <Button
            android:id="@+id/de_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="删除">


        </Button>


        <Button
            android:id="@+id/de_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="编辑">


        </Button>

    </LinearLayout>


</LinearLayout>

